<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_caller_hold"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_caller_hold"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_caller_hold"
        android:layout_marginLeft="19dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_caller_hold_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="#434343"
        android:textSize="@dimen/sp_20"
        tools:text="18888888888"
        app:layout_constraintLeft_toRightOf="@+id/iv_caller_hold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_switch_caller_hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="#ff3b3b"
        android:textSize="@dimen/sp_14"
        android:text="切换通话"
        android:layout_marginRight="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>